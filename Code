        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')

    elif message.text == '/scend':
        scend(message)
    elif message.text == '/delete':
        delete(message)
    else:
        bot.send_message(message.from_user.id, 'Напиши /start')

def scend(message):
    global basket_sc
    keyboard = types.InlineKeyboardMarkup()
    key_cofe = types.InlineKeyboardButton(text='кава', callback_data='cofe')
    keyboard.add(key_cofe)
    key_mango = types.InlineKeyboardButton(text='манго', callback_data='mango')
    keyboard.add(key_mango)
    key_vanilla = types.InlineKeyboardButton(text='ваніль', callback_data='vanilla')
    keyboard.add(key_vanilla)
    key_exotic = types.InlineKeyboardButton(text='екзотичний мікс', callback_data='exotic')
    keyboard.add(key_exotic)
    key_strawberries = types.InlineKeyboardButton(text='полуниця', callback_data='strawberries')
    keyboard.add(key_strawberries)
    key_cake = types.InlineKeyboardButton(text='шоколадний торт', callback_data='cake')
    keyboard.add(key_cake)
    key_mint = types.InlineKeyboardButton(text='мята та евкаліпт', callback_data='mint')
    keyboard.add(key_mint)
    key_raspberry = types.InlineKeyboardButton(text='малина', callback_data='raspberry')
    keyboard.add(key_raspberry)
    key_sea = types.InlineKeyboardButton(text='морский бриз', callback_data='sea')
    keyboard.add(key_sea)
    key_chocolate = types.InlineKeyboardButton(text='шоколад', callback_data='chocolate')
    keyboard.add(key_chocolate)
    key_icemango = types.InlineKeyboardButton(text='льодяне манго', callback_data='icemango')
    keyboard.add(key_icemango)
    key_bubblegum = types.InlineKeyboardButton(text='bubble gum', callback_data='bubblegum')
    keyboard.add(key_bubblegum)
    question = 'виберіть аромат бомбочки'
    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def Basket(message):
    global basket_ob
    global basket_pr
    global basket_sc
    bot.send_message(message.from_user.id, "товар:")
    bot.send_message(message.from_user.id,basket_ob + " із запахом: " + basket_sc)
    bot.send_message(message.from_user.id, "ціна у гривнях:" + str(basket_pr))
    keyboard = types.InlineKeyboardMarkup()
    key_delete = types.InlineKeyboardButton(text='очистити корзину', callback_data='delete')
    keyboard.add(key_delete)
    key_ass = types.InlineKeyboardButton(text='зробити покупку', callback_data='ass')
    keyboard.add(key_ass)
    question = 'виберіть що далі робити боту'
    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def delete(message):
    global basket_ob
    global basket_pr
    global basket_sc
    basket_ob = ''
    basket_pr = 0
    basket_sc = ''
    Basket(message)
    bot.send_message(message.from_user.id, "щоб розпочати роботу із ботом напишіть /start")

def send_form(message):
    keyboard = types.InlineKeyboardMarkup()
    key_heart = types.InlineKeyboardButton(text='бомбочка серце', callback_data='heart')
    keyboard.add(key_heart)
    key_orb = types.InlineKeyboardButton(text='бомбочка сфера', callback_data='orb')
    keyboard.add(key_orb)
    question = 'виберіть форму бомбочки'
    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def send_heart(message):
    keyboard = types.InlineKeyboardMarkup()
    key_heart3d = types.InlineKeyboardButton(text='серце 3d. 200г. 60 грн', callback_data='heart3d')
    keyboard.add(key_heart3d)
    key_heart2d = types.InlineKeyboardButton(text='серце 2d. 100г. 35 грн', callback_data='heart2d')
    keyboard.add(key_heart2d)
    question = 'виберіть розмір та вагу бомбочки серця'
    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def send_orb(message):
