@bot.callback_query_handler(func=lambda call: True)
def callback_worker(call):
    global basket_ob
    global basket_pr
    global basket_sc
    if call.data == "one":
        bot.send_message(call.message.chat.id, 'хороші манери це дуже класно! напиши /form щоб переглянути які форми бомбочок у нас є для тебе;)')
        bot.send_message(call.message.chat.id,'якщо знайдеш у боті якісь помилки-напиши,будь ласка, до нашого instagram')
        bot.send_message(call.message.chat.id,'якщо не знаєш де знайти наш instagram - напиши /url')

    elif call.data == "heart":
        bot.send_message(call.message.chat.id, 'серце! хороший вибір. Напиши /heart')
