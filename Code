def Basket(message):
    global basket_ob
    global basket_pr
    global basket_sc
    bot.send_message(message.from_user.id, "товар:")
    bot.send_message(message.from_user.id,basket_ob + " із запахом: " + basket_sc)
    bot.send_message(message.from_user.id, "ціна у гривнях:" + str(basket_pr))
    keyboard = types.InlineKeyboardMarkup()
    key_delete = types.InlineKeyboardButton(text='очистити корзину', callback_data='delete')
    keyboard.add(key_delete)
    key_ass = types.InlineKeyboardButton(text='зробити покупку', callback_data='ass')
    keyboard.add(key_ass)
    question = 'виберіть що далі робити боту'
    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def delete(message):
    global basket_ob
    global basket_pr
    global basket_sc
    basket_ob = ''
    basket_pr = 0
    basket_sc = ''
    Basket(message)
    bot.send_message(message.from_user.id, "щоб розпочати роботу із ботом напишіть /start")

