        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')

    elif message.text == '/scend':
        scend(message)
    elif message.text == '/delete':
        delete(message)
    else:
        bot.send_message(message.from_user.id, 'Напиши /start')

def scend(message):
    global basket_sc
    keyboard = types.InlineKeyboardMarkup()
    key_cofe = types.InlineKeyboardButton(text='кава', callback_data='cofe')
    keyboard.add(key_cofe)
    key_mango = types.InlineKeyboardButton(text='манго', callback_data='mango')
    keyboard.add(key_mango)
    key_vanilla = types.InlineKeyboardButton(text='ваніль', callback_data='vanilla')
    keyboard.add(key_vanilla)
    key_exotic = types.InlineKeyboardButton(text='екзотичний мікс', callback_data='exotic')
    keyboard.add(key_exotic)
    key_strawberries = types.InlineKeyboardButton(text='полуниця', callback_data='strawberries')
    keyboard.add(key_strawberries)
    key_cake = types.InlineKeyboardButton(text='шоколадний торт', callback_data='cake')
    keyboard.add(key_cake)
    key_mint = types.InlineKeyboardButton(text='мята та евкаліпт', callback_data='mint')
    keyboard.add(key_mint)
    key_raspberry = types.InlineKeyboardButton(text='малина', callback_data='raspberry')
    keyboard.add(key_raspberry)
    key_sea = types.InlineKeyboardButton(text='морский бриз', callback_data='sea')
    keyboard.add(key_sea)
    key_chocolate = types.InlineKeyboardButton(text='шоколад', callback_data='chocolate')
    keyboard.add(key_chocolate)
