@bot.message_handler(content_types=['text'])
def start(message):
    global basket_ob
    global basket_pr
    global basket_sc
    if message.text == '/start':
        keyboard = types.InlineKeyboardMarkup()
        key_one = types.InlineKeyboardButton(text='доброго дня)', callback_data='one')
