        basket_pr = basket_pr + 35
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_heart3d':
        basket_ob = basket_ob + " 3д серце "
