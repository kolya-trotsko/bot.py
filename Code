bot = telebot.TeleBot('....................................')
basket_ob = ''
basket_sc = ''
basket_pr = 0
@bot.message_handler(content_types=['text'])
def start(message):
    global basket_ob
    global basket_pr
    global basket_sc
    if message.text == '/start':
        keyboard = types.InlineKeyboardMarkup()
        key_one = types.InlineKeyboardButton(text='доброго дня)', callback_data='one')
        keyboard.add(key_one)
        question = 'доброго дня, я чат-бот інтернет-магазину _kings_bombs_'
        bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)
    elif message.text == '/form':
        send_form(message)
    elif message.text == '/heart':
        send_heart(message)
    elif message.text == '/orb':
        send_orb(message)
    elif message.text == '/url':
        goodbay(message)
    elif message.text == '/basket':
        Basket(message)
    elif message.text == '/basket_heart2d':
        basket_ob = basket_ob + " 2д серце "
        basket_pr = basket_pr + 35
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_heart3d':
        basket_ob = basket_ob + " 3д серце "
        basket_pr = basket_pr + 60
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')

    elif message.text == '/basket_orb2d7':
        basket_ob = basket_ob + " 2д сфера "
        basket_pr = basket_pr + 45
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_orb3d7':
        basket_ob = basket_ob + " 3д сфера "
        basket_pr = basket_pr + 80
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_orb2d6':
        basket_ob = basket_ob + " 2д сфера 6 см"
        basket_pr = basket_pr + 40
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_orb3d6':
        basket_ob = basket_ob + " 3д сфера 6 см "
        basket_pr = basket_pr + 70
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_orb2d5':
        basket_ob = basket_ob + " 2д сфера 5 см"
        basket_pr = basket_pr + 40
        bot.send_message(message.from_user.id, "товар було додано до корзини")
        bot.send_message(message.from_user.id, 'напиши /scend щоб обрати аромат')
    elif message.text == '/basket_orb3d5':
        basket_ob = basket_ob + " 3д сфера 5 см"
        basket_pr = basket_pr + 60
        bot.send_message(message.from_user.id, "товар було додано до корзини")
