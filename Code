    bot.send_message(message.from_user.id, text=question, reply_markup=keyboard)

def goodbay(message):
    keyboard = types.InlineKeyboardMarkup()
    url_button = types.InlineKeyboardButton(text="Перейти в instagram", url="https://www.instagram.com/invites/contact/?i=6vygvle6b60h&utm_content=mih4yid")
    keyboard.add(url_button)
    bot.send_message(message.chat.id, "перейти на сторінку та зробити замовлення", reply_markup=keyboard)

@bot.callback_query_handler(func=lambda call: True)
def callback_worker(call):
    global basket_ob
    global basket_pr
    global basket_sc
    if call.data == "one":
        bot.send_message(call.message.chat.id, 'хороші манери це дуже класно! напиши /form щоб переглянути які форми бомбочок у нас є для тебе;)')
        bot.send_message(call.message.chat.id,'якщо знайдеш у боті якісь помилки-напиши,будь ласка, до нашого instagram')
        bot.send_message(call.message.chat.id,'якщо не знаєш де знайти наш instagram - напиши /url')

    elif call.data == "heart":
        bot.send_message(call.message.chat.id, 'серце! хороший вибір. Напиши /heart')
    elif call.data == "heart2d":
        bot.send_message(call.message.chat.id, 'напиши /basket_heart2d щоб добавити (2д серце) до корзини')
        bot.send_message(call.message.chat.id, 'або напиши /url щоб зявилася адреса нашого інстаграму де ти зможеш зробити замовлення на (2д серце)')
    elif call.data == "heart3d":
